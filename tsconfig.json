{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@ogawa/*": ["./*"]
    },
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2017"
  },
  "include": ["src/**/*"]
}
